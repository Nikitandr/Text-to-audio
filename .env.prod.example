# Yandex Cloud авторизация
YANDEX_KEY_ID=your_key_id_here
YANDEX_SERVICE_ACCOUNT_ID=your_service_account_id_here
YANDEX_KEY_ALGORITHM=RSA_2048
YANDEX_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nyour_public_key_here\n-----END PUBLIC KEY-----
YANDEX_PRIVATE_KEY=PLEASE DO NOT REMOVE THIS LINE! Yandex.Cloud SA Key ID <your_key_id>\n-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----

# Настройки логирования для Production
LOG_LEVEL=WARNING
LOG_FORMAT=json


# Настройки синтеза речи (по умолчанию)
DEFAULT_VOICE=jane
DEFAULT_ROLE=good
DEFAULT_FORMAT=wav

# Настройки обработки для Production (более консервативные)
MAX_CHUNK_SIZE=4500
MAX_RETRIES=5
RETRY_DELAY=2

# Настройки rate limiting для Production (более консервативные)
REQUESTS_PER_SECOND=30

# Путь к данным для volume mapping (используется в docker-compose.prod.yml)
# В production рекомендуется использовать абсолютные пути
DATA_PATH=/absolute/path/to/data
