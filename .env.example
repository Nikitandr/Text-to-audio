# Yandex Cloud авторизация
# Получите эти данные из вашего authorized_key.json файла
YANDEX_KEY_ID=your_key_id_here
YANDEX_SERVICE_ACCOUNT_ID=your_service_account_id_here
YANDEX_KEY_ALGORITHM=RSA_2048
YANDEX_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nyour_public_key_here\n-----END PUBLIC KEY-----
YANDEX_PRIVATE_KEY=PLEASE DO NOT REMOVE THIS LINE! Yandex.Cloud SA Key ID <your_key_id>\n-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=json

# Директории (настраиваемые через volume mapping)
TEMP_DIR=/app/temp
INPUT_DIR=/app/data/input
OUTPUT_DIR=/app/data/output

# Настройки синтеза речи (по умолчанию)
DEFAULT_VOICE=jane
DEFAULT_ROLE=good
DEFAULT_FORMAT=wav

# Настройки обработки
MAX_CHUNK_SIZE=4500
MAX_RETRIES=3
RETRY_DELAY=1

# Redis (для кэширования токенов)
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Настройки rate limiting
REQUESTS_PER_SECOND=35

# Путь к данным для volume mapping (используется в docker-compose.yml)
# По умолчанию ./data, но можно указать любой путь
DATA_PATH=./data
