# Путь к авторизованному ключу Yandex Cloud
YANDEX_KEY_PATH=/run/secrets/yandex_authorized_key

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=json

# Директории
TEMP_DIR=/app/temp
INPUT_DIR=/app/input
OUTPUT_DIR=/app/output

# Настройки синтеза речи (по умолчанию)
DEFAULT_VOICE=jane
DEFAULT_ROLE=good
DEFAULT_FORMAT=wav

# Настройки обработки
MAX_CHUNK_SIZE=4500
MAX_RETRIES=3
RETRY_DELAY=1

# Redis (для кэширования токенов)
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Настройки rate limiting
REQUESTS_PER_SECOND=35
